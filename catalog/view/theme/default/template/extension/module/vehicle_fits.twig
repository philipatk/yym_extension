<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fancyapps/ui@4.0/dist/fancybox.css" />
<script src="https://cdn.jsdelivr.net/npm/@fancyapps/ui@4.0/dist/fancybox.umd.js"></script>

{% if vehicles %}
<div class="row">
  {% for vehicle in vehicles %}
  <div class="col-sm-3 col-xs-6 text-center" style="margin-bottom: 20px;">
    <div style="border: 1px solid #eee; padding: 15px; border-radius: 8px; height: 100%;">
        
        <a href="{{ vehicle.image }}" data-fancybox="vehicle-gallery" data-caption="{{ vehicle.title }}">
            <img src="{{ vehicle.image }}" alt="{{ vehicle.title }}" class="img-responsive" style="margin: 0 auto; max-height: 100px;" />
        </a>
        
        <div style="margin-top: 15px; font-weight: bold; font-size: 14px; color: #333;">
          {{ vehicle.title }}
        </div>
    </div>
  </div>
  {% endfor %}
</div>
{% endif %}